option_settings:
  aws:elasticbeanstalk:application:environment:
    # JVM Optimization for production
    JAVA_TOOL_OPTIONS: >
      -Xmx512m
      -Xms256m
      -XX:+UseG1GC
      -Dspring.jmx.enabled=false
      -Dspring.main.lazy-initialization=true
      -Dlogging.level.co.todotech=DEBUG
      -Dlogging.level.org.springframework.web=INFO
      -Dlogging.pattern.console=%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n

    # Tomcat settings
    SERVER_TOMCAT_ACCESSLOG_ENABLED: "false"
    SERVER_TOMCAT_MAX_THREADS: "50"